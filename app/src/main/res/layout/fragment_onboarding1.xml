<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_yellow"
    android:orientation="vertical"
    tools:context=".login.OnboardingFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/onboarding1_next"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="58dp"
            android:fontFamily="@font/suitregular"
            android:text="나는 이런"
            android:textColor="@color/black"
            android:textSize="28dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suitbold"
                android:text="기념품"
                android:textColor="@color/black"
                android:textSize="28dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suitregular"
                android:text="을 좋아해요!"
                android:textColor="@color/black"
                android:textSize="28dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/suitregular"
            android:text="복수 선택이 가능해요"
            android:textColor="#878681"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="34dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/onboarding1_img1"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"
                android:src="@drawable/onboarding1_img1" />

            <ImageView
                android:id="@+id/onboarding1_img2"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:scaleType="fitEnd"
                android:src="@drawable/onboarding1_img2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/onboarding1_img3"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/onboarding1_img3" />

            <ImageView
                android:id="@+id/onboarding1_img4"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:scaleType="fitStart"
                android:src="@drawable/onboarding1_img4" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/onboarding1_next"
        android:layout_width="324dp"
        android:layout_height="47dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/next_button_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>