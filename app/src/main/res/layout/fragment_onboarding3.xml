<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_yellow"
    android:orientation="vertical"
    tools:context=".login.OnboardingFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/onboarding3_next">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/suitregular"
            android:text="나는 이런"
            android:textColor="@color/black"
            android:textSize="28dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suitbold"
                android:text="여행 성향"
                android:textColor="@color/black"
                android:textSize="28dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suitregular"
                android:text="이에요!"
                android:textColor="@color/black"
                android:textSize="28dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/suitregular"
            android:text="최대 3개까지 선택 가능해요"
            android:textColor="#878681"
            android:textSize="13dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:scaleType="centerInside"
                android:src="@drawable/onbaording3_screenshot"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/onboarding3_img1"
                android:layout_width="167dp"
                android:layout_height="90dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/onboarding3_img1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/onboarding3_img2"
                android:layout_width="260dp"
                android:layout_height="210dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/onboarding3_img2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/onboarding3_img3"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="105dp"
                android:src="@drawable/onboarding3_img3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/onboarding3_img4"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginTop="160dp"
                android:src="@drawable/onboarding3_img4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/onboarding3_img5"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="115dp"
                android:layout_marginTop="230dp"
                android:src="@drawable/onboarding3_img5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/onboarding3_img6"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/onboarding3_img6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/onboarding3_img7"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="290dp"
                android:src="@drawable/onboarding3_img7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/onboarding3_img8"
                android:layout_width="200dp"
                android:layout_height="95dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="380dp"
                android:src="@drawable/onboarding3_img8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/onboarding3_img9"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginTop="290dp"
                android:src="@drawable/onboarding3_img9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_marginStart="183dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/spiral2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="33dp"
                android:layout_marginTop="165dp"
                android:src="@drawable/rectangle1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="54dp"
                android:layout_height="90dp"
                android:layout_marginTop="388dp"
                android:scaleType="fitXY"
                android:src="@drawable/spiral1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/onboarding3_next"
        android:layout_width="321dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:src="@drawable/next_button_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>