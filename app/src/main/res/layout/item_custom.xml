<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:paddingBottom="15dp">
    <!--    둥그렇게 하는 효과
            android:layout_marginTop="15dp"
-->
    <androidx.cardview.widget.CardView
        android:id="@+id/item_cover_img_cv"
        android:layout_width="155dp"
        android:layout_height="155dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/item_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/category1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/like_iv"
        android:layout_width="22dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@id/item_cover_img_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_cover_img_cv"
        android:src="@drawable/off_heart"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="포테이토 칩스 우스시오 아지"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/item_cover_img_cv"
        app:layout_constraintTop_toBottomOf="@id/item_cover_img_cv"
        android:layout_marginTop="15dp"/>


    <TextView
        android:id="@+id/item_yen_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="[엔화]"
        android:textColor="#22A6C3"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/item_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_title_tv"
        />
    <TextView
        android:id="@+id/item_yen_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="367¥"
        android:textColor="#696969"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/item_yen_tv1"
        app:layout_constraintTop_toBottomOf="@id/item_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_yen_tv1"
        android:layout_marginStart="2dp"
        />
    <TextView
        android:id="@+id/item_won_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="[원화]"
        android:textColor="#22A6C3"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/item_yen_tv2"
        app:layout_constraintTop_toBottomOf="@id/item_title_tv"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/item_won_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="3151₩"
        android:textColor="#696969"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/item_won_tv1"
        app:layout_constraintTop_toBottomOf="@id/item_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_won_tv1"
        android:layout_marginStart="2dp"
        />
    <ImageView
        android:id="@+id/item_star_iv"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/item_yen_tv1"
        app:layout_constraintTop_toTopOf="@id/item_star_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_star_tv"        android:src="@drawable/ic_star"/>
    <TextView
        android:id="@+id/item_star_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="4.40"
        android:textColor="#7E878F"
        android:textSize="11sp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/item_star_iv"
        app:layout_constraintTop_toBottomOf="@id/item_yen_tv1"/>

    <TextView
        android:id="@+id/item_review_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="(273)"
        android:textColor="#95A0AA"
        android:textSize="9sp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/item_star_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_star_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>