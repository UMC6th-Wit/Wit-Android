<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/popup_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_popup"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/notice_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-08-23"
        android:textSize="12sp"
        android:textColor="#898888"
        app:layout_constraintStart_toEndOf="@id/popup_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/notice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[서비스점검공지] 9/25(화)12:00~13:00"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/popup_iv"
        app:layout_constraintTop_toBottomOf="@id/notice_time_tv"
        app:layout_constraintBottom_toTopOf="@id/line"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>