<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    tools:context=".search.SearchFragment">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sv_bg"
        android:hint="상품, 브랜드 등"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:textColorHint="#B4B4B4"
        android:textSize="15sp"
        android:imeOptions="actionSearch"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_reset"
        app:layout_constraintBottom_toBottomOf="@id/et_search"
        app:layout_constraintEnd_toEndOf="@id/et_search"
        app:layout_constraintTop_toTopOf="@id/et_search" />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/recent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/et_search"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginVertical="30dp"
        android:text="최근 검색어"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/remove_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/et_search"
        app:layout_constraintTop_toTopOf="@id/recent_tv"
        app:layout_constraintBottom_toBottomOf="@id/recent_tv"
        android:text="지우기"
        android:textSize="13sp"
        android:textColor="#4E4E4E"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/recent_tv"
        app:layout_constraintTop_toBottomOf="@id/recent_tv"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/item_search"
        />
    <TextView
        android:id="@+id/recommend_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/et_search"
        app:layout_constraintTop_toBottomOf="@id/search_rv"
        android:layout_marginVertical="30dp"
        android:text="추천 검색어"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/recommend_tv"
        app:layout_constraintTop_toBottomOf="@id/recommend_tv"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"
        app:alignItems="flex_start"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/popular_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/et_search"
        app:layout_constraintTop_toBottomOf="@id/flexboxLayout"
        android:layout_marginVertical="30dp"
        android:text="인기 검색어"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/popular_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/et_search"
        app:layout_constraintTop_toTopOf="@id/popular_tv"
        app:layout_constraintBottom_toBottomOf="@id/popular_tv"
        android:text="08.26 02:00 기준"
        android:textSize="13sp"
        android:textColor="#4E4E4E"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popular_tv"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:rowCount="5"
        android:columnCount="4"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/num1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="5"
            android:textAlignment="center"
            android:text="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingVertical="5dp"
            />

        <TextView
            android:id="@+id/name1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="20"
            android:textColor="@color/black"
            android:paddingVertical="5dp"
            android:text="초콜릿" />

        <TextView
            android:id="@+id/num6"
            android:layout_columnWeight="5"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="6" />

        <TextView
            android:paddingVertical="5dp"
            android:id="@+id/name6"
            android:layout_rowWeight="1"
            android:layout_columnWeight="20"
            android:textColor="@color/black"
            android:text="커피" />

        <TextView
            android:id="@+id/num2"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="2" />

        <TextView
            android:id="@+id/name2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="20"
            android:textColor="@color/black"
            android:paddingVertical="5dp"
            android:text="향수" />

        <TextView
            android:id="@+id/num7"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="7" />

        <TextView
            android:id="@+id/name7"
            android:layout_rowWeight="1"
            android:layout_columnWeight="20"
            android:textColor="@color/black"
            android:paddingVertical="5dp"
            android:text="7" />

        <TextView
            android:id="@+id/num3"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="3" />

        <TextView
            android:id="@+id/name3"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="20"
            android:textColor="@color/black"
            android:text="3" />

        <TextView
            android:id="@+id/num8"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="8" />

        <TextView
            android:id="@+id/name8"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="20"
            android:textColor="@color/black"
            android:text="8" />
        <TextView
            android:id="@+id/num4"
            android:layout_rowWeight="1"
            android:paddingVertical="5dp"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="4" />

        <TextView
            android:id="@+id/name4"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="20"
            android:textColor="@color/black"
            android:text="4" />

        <TextView
            android:id="@+id/num9"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="9" />

        <TextView
            android:id="@+id/name9"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="20"
            android:textColor="@color/black"
            android:text="9" />
        <TextView
            android:id="@+id/num5"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="5" />

        <TextView
            android:id="@+id/name5"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="20"
            android:textColor="@color/black"
            android:text="5" />

        <TextView
            android:id="@+id/num10"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="10" />

        <TextView
            android:id="@+id/name10"
            android:paddingVertical="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="20"
            android:text="10"
            android:textColor="@color/black"
            />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>