<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_yellow"
    android:orientation="vertical"
    tools:context=".onboarding.OnboardingFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/suitregular"
        android:text="이런 지역을"
        android:textColor="@color/black"
        android:textSize="28dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suitbold"
            android:text="여행"
            android:textColor="@color/black"
            android:textSize="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suitregular"
            android:text="하고 싶어요!"
            android:textColor="@color/black"
            android:textSize="28dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/suitregular"
        android:text="최대 3개까지 선택 가능해요"
        android:textColor="#878681"
        android:textSize="13dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp">

        <TableRow
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/onboarding2_img1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/onboarding2_img1"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/onboarding2_img2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/onboarding2_img2"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/onboarding2_img3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/onboarding2_img3"
                android:scaleType="fitXY" />
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp">
            <ImageView
                android:id="@+id/onboarding2_img4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/onboarding2_img4"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/onboarding2_img5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/onboarding2_img5"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/onboarding2_img6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/onboarding2_img6"
                android:scaleType="fitXY" />
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp">
            <ImageView
                android:id="@+id/onboarding2_img7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/onboarding2_img7"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/onboarding2_img8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/onboarding2_img8"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/onboarding2_img9"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/onboarding2_img9"
                android:scaleType="fitXY" />
        </TableRow>
    </TableLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/onboarding2_next"
        android:layout_width="324dp"
        android:layout_height="47dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:src="@drawable/next_button_off" />

</androidx.constraintlayout.widget.ConstraintLayout>