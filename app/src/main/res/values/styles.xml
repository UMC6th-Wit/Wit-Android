<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TopLeftBottomLeft">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="TopRight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="BottomRight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="tab_text_appearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="template_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:paddingHorizontal">2dp</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHighlight">@color/light_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="selectableItemBackground">@color/light_gray</item>
    </style>
    <style name="SearchCustomButton">
        <item name="android:background">@drawable/recent_btn_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
</resources>