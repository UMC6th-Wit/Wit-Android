<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TopLeftBottomLeft">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="TopRight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="BottomRight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="tab_text_appearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ranking_tab_text_appearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="template_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:paddingHorizontal">2dp</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHighlight">@color/light_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="selectableItemBackground">@color/light_gray</item>
    </style>
    <style name="SearchText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13sp</item>
    </style>
  
    <style name="ImageRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/item_rating_bar</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">36dp</item>
    </style>
    <style name="CommonTextViewStyle">
        <item name="android:paddingVertical">7dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BoldCenteredTextStyle" parent="CommonTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.NoActionbar.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>