<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.UMC6thWit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginTheme" parent="Base.Theme.UMC6thWit">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/background_yellow</item>
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="MainTheme" parent="Base.Theme.UMC6thWit">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="Theme.UMC6thWit" parent="Base.Theme.UMC6thWit" />

    <style name="Theme.MyApp.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/splash_background</item>
        <!-- 스플래시 화면이 끝난 후 사용할 테마 -->
        <item name="postSplashScreenTheme">@style/MainTheme</item>
    </style>


</resources>